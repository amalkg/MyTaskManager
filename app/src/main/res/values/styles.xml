<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SubmitButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:height">48dp</item>
        <item name="elevation">0dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="backgroundTint">@color/colorPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:letterSpacing">0</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="CancelButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:height">48dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="strokeColor">@color/colorPrimary</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textSize">18sp</item>
        <item name="fontFamily">@font/roboto_medium</item>
    </style>

    <style name="AppTextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxBackgroundColor">@color/color_white</item>
        <item name="boxStrokeErrorColor">@color/color_red</item>
        <item name="errorTextColor">@color/color_red</item>
        <item name="hintEnabled">true</item>
        <item name="errorIconDrawable">@null</item>
    </style>

    <style name="AppTextInputLayoutEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#676767</item>
        <item name="android:textColorHint">#676767</item>
    </style>

</resources>
